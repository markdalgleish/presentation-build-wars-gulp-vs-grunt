      section
        h2.bullet Streaming Builds
        pre.bullet.language-javascript
          code.
            gulp.src('src/foobar.styl') // <-- Read from FS

              // In memory transforms:
              .pipe(stylus())
              .pipe(rename({ ext: 'css' }))
              .pipe(autoprefixer())
              .pipe(cssmin())
              .pipe(header('/* Copyright 2014 */'))

              .pipe(gulp.dest('dist')) // <-- Write to FS

